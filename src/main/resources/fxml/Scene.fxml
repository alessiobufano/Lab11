<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.rivers.FXMLController">
	<top>
		<Label text="Lab11_Rivers" BorderPane.alignment="CENTER">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
		</Label>
	</top>
	<center>
		<VBox spacing="10.0" BorderPane.alignment="CENTER">
			<children>
				<HBox spacing="10.0">
					<children>
						<Label text="River">
                     <HBox.margin>
                        <Insets top="4.0" />
                     </HBox.margin></Label>
						<ComboBox fx:id="boxRiver" onAction="#completeFields" prefWidth="150.0" promptText="Select a river...">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></ComboBox>
					</children>
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
				</HBox>
				<GridPane>
					<columnConstraints>
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
						<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
					</columnConstraints>
					<rowConstraints>
						<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
						<RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
					</rowConstraints>
					<children>
						<Label text="Start Date" />
						<Label text="End Date" GridPane.columnIndex="1" />
						<Label text="# of measurements" GridPane.columnIndex="2" />
						<TextField fx:id="txtStartDate" editable="false" GridPane.rowIndex="1" />
						<TextField fx:id="txtEndDate" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
						<TextField fx:id="txtNumMeasurements" editable="false" GridPane.columnIndex="2" GridPane.rowIndex="1" />
						<Label text="Average Flow" GridPane.columnIndex="3" />
						<TextField fx:id="txtAvgFlow" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" />
					</children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
				</GridPane>
				<HBox spacing="10.0">
					<children>
						<Label text="Scale coefficient (k)">
                     <HBox.margin>
                        <Insets top="3.0" />
                     </HBox.margin></Label>
						<TextField fx:id="txtK">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin></TextField>
						<Button mnemonicParsing="false" onAction="#doSimulation" text="Simulate">
                     <HBox.margin>
                        <Insets left="60.0" />
                     </HBox.margin></Button>
					</children>
               <VBox.margin>
                  <Insets bottom="10.0" top="12.0" />
               </VBox.margin>
				</HBox>
				<TextArea fx:id="txtResult" editable="false" prefHeight="200.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets bottom="3.0" />
               </VBox.margin></TextArea>
			</children>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
			</BorderPane.margin>
		</VBox>
	</center>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</BorderPane>
